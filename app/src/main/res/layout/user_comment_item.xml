<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/user_comment_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="19dp"
        android:textColor="@color/colorblack"
        android:layout_marginLeft="5dp"
        />
    <TextView
        android:id="@+id/user_comment_contentshow"
        android:layout_width="wrap_content"
        android:textSize="14dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="评论："
        android:layout_marginLeft="5dp"
        android:drawableLeft="@drawable/ic_speaker_notes_black_24dp"
        android:layout_below="@+id/user_comment_name"
        />

    <TextView
        android:id="@+id/user_comment_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:layout_below="@+id/user_comment_contentshow"
        android:layout_alignTop="@+id/user_comment_contentshow"
        android:layout_toEndOf="@+id/user_comment_contentshow"
        />

    <TextView
        android:id="@+id/grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="评分："
        android:textSize="15dp"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/user_comment_content"
        android:drawableLeft="@drawable/ic_assignment_black_24dp1"
         />

    <TextView
        android:id="@+id/user_commnet_grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        android:textSize="18dp"
        android:drawableRight="@drawable/ic_star_black_24dp"
        android:layout_below="@+id/user_comment_content"
        android:layout_toEndOf="@+id/grade" />


    <TextView
        android:id="@+id/user_comment_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="60dp"
        android:textSize="15dp"
        android:layout_below="@+id/user_comment_content"
        android:layout_alignParentEnd="true"
        android:drawableLeft="@drawable/ic_schedule_black_24dp"
        />


</RelativeLayout>
